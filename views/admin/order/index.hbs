<table class="table">
	<thead>
		<tr>
			<th scope="col">#</th>
			<th scope="col">Mã đơn hàng</th>
			<th scope="col">Tên khách hàng</th>
			<th scope="col">Địa chỉ</th>
			<th scope="col">Số điện thoại</th>
			<th scope="col">Địa chỉ Email</th>
			<th scope="col">Tổng tiền (VNĐ)</th>
			<th scope="col">Ngày đặt hàng</th>
			<th scope="col" class="text-center">Tác vụ</th>
		</tr>
	</thead>
	<tbody>
		{{#each orders}}
		<tr>
			<th scope="row">{{@index}}</th>
			<td>{{OrderID}}</td>
			<td>{{fullname}}</td>
			<td>{{Address}}</td>
			<td>{{Phone}}</td>
			<td>{{email}}</td>
			<td>{{Total}}</td>
			<td>{{OrderDate}}</td>
			<td class="text-right">
				<a class="btn btn-danger" href="/admin/order/delete?id={{ProID}}" role="button">
					<i class="fa fa-trash" aria-hidden="true"></i>
				</a>
				<a class="btn btn-success" href="/admin/order/edit?id={{ProID}}" role="button">
					<i class="fa fa-pencil" aria-hidden="true"></i>
				</a>
			</td>
		</tr>
		{{/each}}
	</tbody>
</table>

<!-- pagination  -->
<div class="row">
	<ul class="pagination ml-auto">
		{{#if hasPrevious}}
		<li class="page-item">
			<a class="page-link" href="?&page=1" aria-label="Previous">
				<span aria-hidden="true">&laquo;</span>
				<span class="sr-only">Previous</span>
			</a>
		</li>
		{{else}}
		<li class="page-item disabled">
			<a class="page-link" href="#" aria-label="Previous">
				<span aria-hidden="true">&laquo;</span>
				<span class="sr-only">Previous</span>
			</a>
		</li>
		{{/if}}
		{{#each page_numbers}}
		{{#if isCurPage}}
		<li class="page-item active">
			<a class="page-link" href="javascript:;">{{value}}</a>
		</li>
		{{else}}
		<li class="page-item">
			<a class="page-link" href="?&page={{value}}">{{value}}</a>
		</li>
		{{/if}}
		{{/each}}
		{{#if hasNext}}
		<li class="page-item">
			<a class="page-link" href="?&page={{maxPage}}" aria-label="Next">
				<span aria-hidden="true">&raquo;</span>
				<span class="sr-only">Next</span>
			</a>
		</li>
		{{else}}
		<li class="page-item disabled">
			<a class="page-link" href="#" aria-label="Next">
				<span aria-hidden="true">&raquo;</span>
				<span class="sr-only">Next</span>
			</a>
		</li>
		{{/if}}
	</ul>
</div>
<!-- pagination  -->