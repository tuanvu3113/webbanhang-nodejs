<!doctype html>
<html lang="en">

<head>
    <title>Shop Ba lô, Túi xách</title>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/css/bootstrap.min.css" integrity="sha384-9gVQ4dYFwwWSjIDZnLEWnxCjeSWFphJiwGPXr1jddIhOegiu1FwO5qRGvFXOdJZ4"
        crossorigin="anonymous">
    <!-- Google Font -->
    <link href='http://fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css'>
    <link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Roboto+Condensed" rel="stylesheet">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <!-- custom css -->
    <link rel="stylesheet" href="/css/style.css">

    
    {{{_sections.css}}}
</head>

<body>
    <div class="container-fluid p-0">
        <nav class="navbar navbar-expand-lg navbar-dark justify-content-between" style="background-color: #02a8f3;">
            <a class="navbar-brand" href="/">Shop Pohs</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsiveContent" aria-controls="navbarSupportedContent"
                aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarResponsiveContent">
                <form class="form-inline ml-auto" action="/search">
                    <input class="form-control mr-sm-2" type="search" name="q" autocomplete="off" placeholder="Tìm kiếm..." aria-label="Search">
                    <button class="btn btn-outline-light my-2 my-sm-0" type="submit">Tìm kiếm</button>
                </form>
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="/checkout">
                            <i class="fa fa-shopping-cart" aria-hidden="true"></i>&nbsp;Giỏ hàng</a>
                    </li>
                    {{#if layoutVM.isLogged}}
                    <form id="frmLogout" method="post" action="/account/logout"></form>
                    <span class="VaoDN fa fa-user" style="color:white;margin-left:10px;margin-top:10px;font-size: 18px;">Xin chào {{layoutVM.curUser.f_Name}} </span>
                    <li class="dropdown Login" style="margin-top: 10px;">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown"> <b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li><a href="/account/profile">Profile</a></li>
                            <li><a href="/checkout">Giỏ hàng</a></li>
                            <li><a id="lnkLogout" href="javascript:;">Logout</a></li>

                        </ul>
                    </li>
                    {{else}}
                    <li class="nav-item">
                        <a class="nav-link" href="/account/login">
                            <i class="fa fa-user-o" aria-hidden="true"></i>&nbsp;Đăng nhập</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link" href="/account/register">
                            <i class="fa fa-user-o" aria-hidden="true"></i>&nbsp;Đăng ký</a>
                    </li>
                    {{/if}}
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarSupport" role="button" data-toggle="dropdown" aria-haspopup="true"
                            aria-expanded="false">
                            24/7 Support
                            <b class="caret"></b>
                        </a>
                        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarSupport">
                            <a class="dropdown-item" href="#">
                                <strong>Call: </strong>0123 456 789</a>
                            </a>
                            <a class="dropdown-item" href="mailto:bestShopEver@bestshop.com">
                                <strong>Mail: </strong>shopPohs@shopposh.com</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="https://goo.gl/maps/qyHMFh1LzGo" target="_blank">
                                <strong>Address: </strong>
                                <div>
                                    Hồ Chí Minh, Việt Nam
                                </div>
                            </a>
                        </div>
                    </li>
                </ul>
            </div>
        </nav>
        <nav class="navbar navbar-expand-lg navbar-dark justify-content-between mb-2 pb-0" style="background-color: #02a8f3;">
            <nav class="dropdown mr-custom">
                <button class="btn btn-dropdown text-dropdown px-0" type="button" id="listItemDropdown" data-toggle="dropdown" aria-haspopup="true"
                    aria-expanded="false">
                    <i class="fa fa-bars fa-lg" aria-hidden="true"></i>
                    DANH MỤC SẢN PHẨM
                </button>
                <div class="dropdown-menu" aria-labelledby="listItemDropdown">
                    <ul>
                        {{#each layoutVM.categories}}
                        <li>
                            <a class="dropdown-item dropdown-list-item" href="/product/byCat/{{CatID}}">
                                <span class="text-dropdown">{{CatName}}</span>
                            </a>
                        </li>
                        {{/each}}
                    </ul>
                </div>
            </nav>
            <nav class="dropdown mr-custom">
                <button class="btn btn-dropdown text-dropdown px-0" type="button" id="listItemDropdown" data-toggle="dropdown" aria-haspopup="true"
                    aria-expanded="false">
                    <i class="fa fa-home fa-lg" aria-hidden="true"></i>
                    Thương hiệu
                </button>
                <div class="dropdown-menu" aria-labelledby="listItemDropdown">
                    <ul>
                        {{#each layoutVM.brands}}
                        <li>
                            <a class="dropdown-item dropdown-list-item" href="/product/byBrand/{{BrandID}}">
                                <span class="text-dropdown">{{BrandName}}</span>
                            </a>
                        </li>
                        {{/each}}
                    </ul>
                </div>
            </nav>
            <button class="btn btn-dropdown text-dropdown px-0 mr-custom a" type="button">
                <i class="fa fa-check-square-o fa-lg" aria-hidden="true"></i>
                100% Chính hãng
            </button>
            <button class="btn btn-dropdown text-dropdown px-0 mr-custom a" type="button">
                <i class="fa fa-hourglass-half fa-lg" aria-hidden="true"></i>
                Giao hàng chớp nhoáng
            </button>
            <button class="btn btn-dropdown text-dropdown px-0 mr-custom a" type="button">
                <i class="fa fa-undo fa-lg" aria-hidden="true"></i>
                30 Ngày đổi trả dễ dàng
            </button>
            <button class="btn btn-dropdown text-dropdown px-0 ml-auto a" type="button">
                <i class="fa fa-map-marker fa-lg" aria-hidden="true"></i>
                Tìm cửa hàng trên toàn quốc
            </button>
        </nav>
    </div>

    <div class="container">
        {{{body}}}
    </div>


